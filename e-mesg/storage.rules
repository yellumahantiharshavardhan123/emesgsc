rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can read all but only upload their own
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Status media - users can read all but only upload their own
    match /statuses/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat media - authenticated users can read and write
    match /chat-media/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}